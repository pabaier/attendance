<div class="row my-2" id="user-<%- user.id %>">
    <div class="col-10">
            <button type="button" value=<%- user.id %> class="btn btn-outline-secondary form-control view">
            <div class="row">
                <div class="col-3">
                    <%- user.first_name %>
                </div>
                <div class="col-3">
                    <%- user.last_name %>
                </div>
                <div class="col">
                    <%- user.email %>
                </div>
            </div>
        </button>
        </div>
    <div class="col">
        <button type="button" value=<%- user.id %> id="sign-in-<%- user.id %>" class="btn btn-primary signin form-control">Sign In</button>
    </div>
    <div class="col">
        <button type="button" value=<%- user.id %> id="sign-in-<%- user.id %>" class="btn btn-primary delete form-control">Delete</button>
    </div>
</div>
